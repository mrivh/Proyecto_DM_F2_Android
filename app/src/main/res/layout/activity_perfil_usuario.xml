<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_Usuario">

    <!-- Logo e ícono para editar-->
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/logo"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@color/gray"
        android:layout_marginTop="20dp"
       />
    <ImageButton
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_baseline_edit_24"
        android:contentDescription="@string/image"
        android:background="@color/white"
        />

    <!-- Posicionamiento centrado de los siguientes elementos-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Perfil_Usuario">

        <!-- Inserción de ícono - imagen de usuario -->
        <ImageView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:contentDescription="@string/image"
            />

        <!-- Creación de inputs -->
        <!-- 1.- Campo de usuario -->
        <EditText
            android:id="@+id/editText1"
            android:hint="@string/usuario"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLength="10"
            android:layout_marginHorizontal="24dp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="12dp"
            />

        <!-- 2.- Campo de fecha de nacimiento -->
        <EditText
            android:id="@+id/editText2"
            android:hint="@string/nacimiento"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLength="10"
            android:layout_marginHorizontal="24dp"
            android:inputType="text|date"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="12dp"
            />

        <!-- 3.- Campo de correo -->
        <EditText
            android:id="@+id/editText3"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLength="10"
            android:layout_marginHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="12dp"
            />

        <!-- 4.- Campo de número de teléfono -->
        <EditText
            android:id="@+id/editText4"
            android:hint="@string/phone"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLength="10"
            android:layout_marginHorizontal="24dp"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawablePadding="12dp"
            />

    </LinearLayout>

    <!-- Bottom navbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".Perfil_guia">

        <TextView
            android:layout_width="415dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <!-- Img/Botón -->

        <!-- Favoritos -->
        <ImageButton
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            tools:ignore="MissingConstraints" />

        <!-- Travel -->
        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_baseline_home_repair_service_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            tools:ignore="MissingConstraints" />

        <!-- Home -->
        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Mensajes -->
        <ImageButton
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_baseline_chat_bubble_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            tools:ignore="MissingConstraints" />

        <!-- Usuario -->
        <ImageButton
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>